{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "API Carros",
        "description": "Documentação da API para gerenciamento de dados de carros"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/cars": {
            "get": {
                "summary": "Lista todos os carros",
                "responses": {
                    "200": {
                        "description": "Lista de carros"
                    }
                }
            },
            "post": {
                "summary": "Cria um novo carro",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "model": { "type": "string" },
                                "brand": { "type": "string" },
                                "year": { "type": "integer" },
                                "color": { "type": "string" }
                            },
                            "required": ["model", "brand", "year", "color"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Carro criado com sucesso"
                    }
                }
            }
        },
        "/cars/{id}": {
            "get": {
                "summary": "Busca um carro pelo ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes do carro"
                    },
                    "404": {
                        "description": "Carro não encontrado"
                    }
                }
            },
            "put": {
                "summary": "Atualiza um carro pelo ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "model": { "type": "string" },
                                "brand": { "type": "string" },
                                "year": { "type": "integer" },
                                "color": { "type": "string" }
                            },
                            "required": ["model", "brand", "year", "color"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Carro atualizado com sucesso"
                    },
                    "404": {
                        "description": "Carro não encontrado"
                    }
                }
            },
            "delete": {
                "summary": "Exclui um carro pelo ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Carro excluído com sucesso"
                    },
                    "404": {
                        "description": "Carro não encontrado"
                    }
                }
            }
        }
    }
}